<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %> 
<body class="login">
    <%- include('partials/headerNavbar') %> 
    <main>
        <div class="container">
            <section>
                <div class="columns is-centered is-vcentered">
                    <div class="column is-6">
                        <form action="/users/login" method="POST">
                            <h2>Ingresa tus datos</h2>
                            <div class="field">
                                <label for="email" class="form-label">Email</label>
                                <div class="control">
                                    <input class="form-input" type="text" name="email" id="email" class="<%=locals.errors && errors.email ? 'is-danger' : '' %> " value="<%= locals.old && old.email %> ">
                                </div>
                                <% if(locals.errors && errors.email) { %>
                                    <p class="feedback is-danger"><%= errors.email %> </p>
                                <% } %> 
                            </div>
                            <div class="field">
                                <label for="password" class="form-label">Contrase√±a</label>
                                <div class="control">
                                    <input class="form-input"type="password" name="password" id="password">
                                </div>
                                <p class="feedback"></p>
                            </div>
                            <div class="field">
                                <label for="remember" class="form-label">Recordar mis datos</label>
                                <div class="control">
                                    <input  class="form-input"type="checkbox" name="remember" id="remember">
                                </div>
                            </div>
                            <div class="field">
                                <div class="control">
                                    <button class="form-input"type="submit">Ingresar</button>
                                </div>
                            </div> 
                        </form>  
                    </div>
                </div>
            </section>
        </div>
    </main>
    <%- include('partials/footer') %> 
</body>
</html>