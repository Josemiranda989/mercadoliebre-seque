<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %> 
<body class="register">
    <%- include('partials/headerNavbar') %> 
    <main>
        <div class="container">
            <section>
                <div class="columns is-centered">
                    <div class="column is-6">
                        <h1>Registro</h1>
                        <form action="/users" method="POST" enctype="multipart/form-data">
                            <div class="columns">
                                <div class="column is-6">
                                    <div class="field">
                                        <label for="name" class="form-label">Nombre:</label>
                                        <div class="control">
                                            <input type="text" name="firstName" class="form-input" >
                                        </div>
                                        <p class="feedback"></p>
                                    </div>
                                </div>
                                <div class="column is-6">
                                    <div class="field">
                                        <label for="lastName"  class="form-label">Apellido</label>
                                        <div class="control">
                                            <input type="text" name="lastName" class="form-input">
                                        </div>
                                        <p class="feedback"></p>
                                    </div>
                                </div>
                            </div>
                            <div class="field">
                                <label for="email"  class="form-label">Email</label>
                                <div class="control">
                                    <input type="text" name="email" class="form-input">
                                </div>
                                <p class="feedback"></p>
                            </div>
                            <div class="field">
                                <label for="image"  class="form-label">Imagen</label>
                                <div class="control">
                                    <input   type="file" name="image" id="image"  class="<%= locals.errors && errors.image ? 'is-danger' : '' %> ">
                                </div>
                                <% if(locals.errors && errors.image) { %>
                                    <p class="feedback is-danger"><%= errors.image %> </p>
                                <% } %> 
                            </div>
                            <div class="field">
                                <label for="email"  class="form-label" >Contraseña</label>
                                <div class="control">
                                    <input type="password" name="password"  class="form-input">
                                </div>
                                <p class="feedback"></p>
                            </div>
                            <div class="field">
                                <label for="email"  class="form-label">Repetir Contraseña</label>
                                <div class="control">
                                    <input type="password" name="repassword"  class="form-input">
                                </div>
                                <p class="feedback"></p>
                            </div>
                            <div class="field">
                                <div class="control">
                                    <button type="submit">Registrarme</button>
                                </div>
                            </div> 
                        </form>  
                    </div>
                </div>
            </section>
        </div>
    </main>
    <%- include('partials/footer') %> 
</body>
</html>